
@{
    ViewBag.Title = "pintarTablero";
}

    <form action="/proyecOthello/pareja" method="post">

        <div class="container">
            <h2>TABLERO</h2>
            <head>
                <title>JUEGO OTHELLO</title>
            </head>
            <div>
                <h5 style="color:blue"> @ViewBag.Error</h5>
                <h5 style="color:orangered">Jugador#1 @ViewBag.Usuario1 </h5>
                <h5 style="color:blue">NUMERO DE MOVIMIENTOS: @ViewBag.contador1</h5>
                <h5 style="color:black">_________________________________________</h5>
                <h5 style="color:orangered">Jugador#2 @ViewBag.Usuario2</h5>
                <h5 style="color:blue">NUMERO DE MOVIMIENTOS: @ViewBag.contador2 </h5>
                <h5 style="color:black">_________________________________________</h5>
            </div>
            <div>
                <h5 style="color:red">Turno del jugador: @ViewBag.turno</h5>
            </div>
            <div>
                <label for="Name"> Introduzca la columna</label>
                <input type="text" class="form control" name="col" placeholder="Letra Columna" />
                <label for="Name"> Introduzca la fila</label>
                <input type="text" class="form control" name="fil" placeholder="Numero Fila" />
            </div>
            <div>
                <input type="submit" name="btn1" value="Tirar" />
            </div>
            <div>
                <input type="submit" name="btn1" value="Generar XML" />
            </div>
    </form>
    <div>
        <table width="400" border="1" cellpadding="0" cellspacing="0">



            @{Tablero ta = ViewBag.tablero;
                int i = 0;
                string[,] a = ta.getMatriz(); }
            @{for (int f = 0; f < a.GetLength(0); f++)
                {

            <tr>
                @for (int c = 0; c < a.GetLength(1); c++)
                {
                    if (a[f, c] == "blanco")
                    {
                        <td height="50" width="50"><img src="@Url.Content("~/Images/blanca.jpg")" width="100%"></td>
                    }
                    else if (a[f, c] == "negro")
                    {
                        <td height="50" width="50"><img src="@Url.Content("~/Images/fichaNegra.jpg")" width="100%"></td>
                    }
                    else if (a[f, c] == "nada")
                    {
                        <td style="background-color:#6ADC1B;" height="50" width="50"></td>
                    }
       
                    else
                    {
                        <td style="background-color:#B97D19;" height="50" width="50"> @a[f, c] </td>
                    }
                }
            </tr>
                }
            }
        </table>
    </div>
